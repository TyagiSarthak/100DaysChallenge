class Solution {
public:
    bool isPalindrome(int x) {
        long long rev=0, temp;
        temp=x;
        if(x==0)
            return 1;
        if(x<0||(x%10==0))
            return 0;
        while(x){
            rev=(rev*10)+(x%10);
            x=x/10;
        }
        return((rev==temp)?1:0);
    }
};


